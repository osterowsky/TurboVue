{
    "manifest_version": 3,
    "name": "TurboVue",
    "description": "Be faster than Usain Bolt, read always with TurboVue",
    "version": "0.1.0",
    "author": "ostern.patryk02@gmail.com",
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "http://*/*", 
        "https://*/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["scripts/contentScript.js"]
        }
    ]
}